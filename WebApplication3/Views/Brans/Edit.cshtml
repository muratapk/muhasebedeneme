@model WebApplication3.Models.Brans
@{
    ViewData["Title"] = "Edit";
}

<h1>Düzenle</h1>

<form method="post" action="Edit">
    <input type="hidden" asp-for="Brans_Id" />
    <div class="form-group row">
        <label for="text" class="col-4 col-form-label">Branş Adı</label>
        <div class="col-8">
            <input id="text" asp-for="Brans_Adi" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-4 col-8">
            <button name="submit" type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>