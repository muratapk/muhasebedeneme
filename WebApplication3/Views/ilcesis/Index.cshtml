@model IEnumerable<WebApplication3.Models.ilcesi>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-danger" asp-action="Create">Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ilce_Adi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.il_Id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ilce_Adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.il_Id)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.ilce_Id">Düzelt</a> |
                <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.ilce_Id">Detay</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ilce_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
